<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:layout_marginBottom="12dp"
            android:paddingBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp"
                android:gravity="center_vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_avatar"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    app:cardCornerRadius="40dp"
                    app:cardElevation="0dp"
                    android:layout_marginEnd="16dp">

                    <ImageView
                        android:id="@+id/iv_avatar"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/lan"
                        android:scaleType="centerCrop"/>
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="小明"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:id="@+id/tv_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="悦景小区-1栋-501"
                        android:textSize="14sp"
                        android:textColor="#666666"/>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#F0F0F0"
                android:layout_marginBottom="16dp"
                android:layout_marginHorizontal="20dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:baselineAligned="false">

                <LinearLayout
                    android:id="@+id/btn_edit_profile"
                    style="@style/MineMenuItemStyle">
                    <ImageView
                        style="@style/MineMenuIconStyle"
                        android:src="@drawable/resident_edit_homepage"/>
                    <TextView
                        style="@style/MineMenuTextStyle"
                        android:text="编辑主页"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btn_my_orders"
                    style="@style/MineMenuItemStyle">
                    <ImageView
                        style="@style/MineMenuIconStyle"
                        android:src="@drawable/resident_my_orders_resident"/>
                    <TextView
                        style="@style/MineMenuTextStyle"
                        android:text="我的订单"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btn_watch_history"
                    style="@style/MineMenuItemStyle">
                    <ImageView
                        style="@style/MineMenuIconStyle"
                        android:src="@drawable/resident_watching_history"/>
                    <TextView
                        style="@style/MineMenuTextStyle"
                        android:text="观看历史"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btn_change_password"
                    style="@style/MineMenuItemStyle">
                    <ImageView
                        style="@style/MineMenuIconStyle"
                        android:src="@drawable/resident_changes_password"/>
                    <TextView
                        style="@style/MineMenuTextStyle"
                        android:text="更改密码"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:baselineAligned="false">

                <LinearLayout
                    android:id="@+id/btn_my_dynamics"
                    style="@style/MineMenuItemStyle">
                    <ImageView
                        style="@style/MineMenuIconStyle"
                        android:src="@drawable/d_t"/>
                    <TextView
                        style="@style/MineMenuTextStyle"
                        android:text="我的动态"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btn_my_help"
                    style="@style/MineMenuItemStyle">
                    <ImageView
                        style="@style/MineMenuIconStyle"
                        android:src="@drawable/hu_zhu"/>
                    <TextView
                        style="@style/MineMenuTextStyle"
                        android:text="我的互助"/>
                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>