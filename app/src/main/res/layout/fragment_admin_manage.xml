<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:padding="12dp"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="工作台"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="4dp"
            android:layout_marginStart="4dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_bg"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:elevation="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="物业服务"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginBottom="16dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/btn_set_fee_standard"
                    style="@style/DashboardItemStyle">
                    <ImageView
                        style="@style/DashboardIconStyle"
                        android:src="@drawable/management_fee"/>
                    <TextView
                        style="@style/DashboardTextStyle"
                        android:text="费用标准"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btn_publish_fee"
                    style="@style/DashboardItemStyle">
                    <ImageView
                        style="@style/DashboardIconStyle"
                        android:src="@drawable/administrator_fee_formula"/>
                    <TextView
                        style="@style/DashboardTextStyle"
                        android:text="费用公示"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btn_fee_statistics"
                    style="@style/DashboardItemStyle">
                    <ImageView
                        style="@style/DashboardIconStyle"
                        android:src="@drawable/administrator_statistics"/>
                    <TextView
                        style="@style/DashboardTextStyle"
                        android:text="缴费统计"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btn_payment_appeal"
                    style="@style/DashboardItemStyle">
                    <ImageView
                        style="@style/DashboardIconStyle"
                        android:src="@drawable/administrator_appeal"/>
                    <TextView
                        style="@style/DashboardTextStyle"
                        android:text="异常申诉"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_bg"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:elevation="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="便民服务"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginBottom="16dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:id="@+id/btn_publish_notice"
                    style="@style/DashboardItemStyle">
                    <ImageView
                        style="@style/DashboardIconStyle"
                        android:src="@drawable/posted_by_administrator"/>
                    <TextView
                        style="@style/DashboardTextStyle"
                        android:text="发布通知"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btn_initiate_vote"
                    style="@style/DashboardItemStyle">
                    <ImageView
                        style="@style/DashboardIconStyle"
                        android:src="@drawable/ic_vote"/>
                    <TextView
                        style="@style/DashboardTextStyle"
                        android:text="发起投票"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btn_resident_list"
                    style="@style/DashboardItemStyle">
                    <ImageView
                        style="@style/DashboardIconStyle"
                        android:src="@drawable/administrator_resident"/>
                    <TextView
                        style="@style/DashboardTextStyle"
                        android:text="居民管理"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btn_merchant_list"
                    style="@style/DashboardItemStyle">
                    <ImageView
                        style="@style/DashboardIconStyle"
                        android:src="@drawable/administrator_manages_merchants"/>
                    <TextView
                        style="@style/DashboardTextStyle"
                        android:text="商家管理"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/btn_merchant_audit"
                    style="@style/DashboardItemStyle">
                    <ImageView
                        style="@style/DashboardIconStyle"
                        android:src="@drawable/administrator_reviews_merchants"/>
                    <TextView
                        style="@style/DashboardTextStyle"
                        android:text="商家审核"/>
                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_bg"
            android:padding="16dp"
            android:layout_marginBottom="24dp"
            android:elevation="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="小区治理"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginBottom="16dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/btn_resident_repair"
                    style="@style/DashboardItemStyle">
                    <ImageView
                        style="@style/DashboardIconStyle"
                        android:src="@drawable/ic_repair"/>
                    <TextView
                        style="@style/DashboardTextStyle"
                        android:text="居民报修"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btn_life_dynamics"
                    style="@style/DashboardItemStyle">
                    <ImageView
                        style="@style/DashboardIconStyle"
                        android:src="@drawable/admin_updates"/>
                    <TextView
                        style="@style/DashboardTextStyle"
                        android:text="生活动态"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btn_neighbor_help"
                    style="@style/DashboardItemStyle">
                    <ImageView
                        style="@style/DashboardIconStyle"
                        android:src="@drawable/ic_service"/>
                    <TextView
                        style="@style/DashboardTextStyle"
                        android:text="邻里互助"/>
                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</ScrollView>