<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/repair_item_bg"
    android:padding="16dp"
    android:layout_marginBottom="12dp">

    <!-- 标题 -->
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="3号楼东侧路灯不亮"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tv_view"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="12dp" />

    <!-- 查看按钮 -->

    <!-- 单号 -->
    <Button
        android:id="@+id/tv_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="4dp"
        android:backgroundTint="@color/blue"
        android:paddingHorizontal="16dp"
        android:text="查看"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_repair_no"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="单号: BX20230512001"
        android:textSize="12sp"
        android:textColor="@color/gray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tv_view"
        app:layout_constraintTop_toBottomOf="@+id/tv_title"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="12dp" />

    <!-- 地点 -->
    <TextView
        android:id="@+id/tv_location"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="地点: 3栋1单元"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tv_view"
        app:layout_constraintTop_toBottomOf="@+id/tv_repair_no"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="12dp" />

    <!-- 提交人 -->
    <TextView
        android:id="@+id/tv_submitter"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="提交人: 张三"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tv_view"
        app:layout_constraintTop_toBottomOf="@+id/tv_location"
        android:layout_marginEnd="12dp" />

    <!-- 时间 -->
    <TextView
        android:id="@+id/tv_submit_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="时间: 2023-05-12 14:30"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tv_view"
        app:layout_constraintTop_toBottomOf="@+id/tv_submitter"
        android:layout_marginEnd="12dp" />

    <!-- 状态 -->
    <TextView
        android:id="@+id/tv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="待受理"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:paddingHorizontal="8dp"
        android:paddingVertical="2dp"
        android:background="@drawable/status_pending"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_submit_time"
        android:layout_marginTop="8dp" />

</androidx.constraintlayout.widget.ConstraintLayout>