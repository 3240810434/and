<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView android:id="@+id/iv_back" android:src="@drawable/ic_arrow_right" android:rotation="180" android:layout_width="24dp" android:layout_height="24dp"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="编辑帖子" android:layout_centerInParent="true" android:textSize="18sp"/>
    </RelativeLayout>

    <EditText
        android:id="@+id/et_content"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:hint="输入作品描述..."
        android:gravity="top"
        android:background="@null"
        android:layout_marginTop="20dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_preview"
        android:layout_width="match_parent"
        android:layout_height="100dp"/>

    <Button
        android:id="@+id/btn_publish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="发作品"
        android:backgroundTint="#FF4081"
        android:textColor="@color/white"
        android:layout_marginTop="20dp"/>
</LinearLayout>