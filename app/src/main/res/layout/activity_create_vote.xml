<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:elevation="2dp">
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:src="@drawable/fan_hui"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发起投票"
            android:textSize="18sp"
            android:textColor="#333"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/et_vote_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请输入投票标题"
                android:background="@drawable/edittext_bg"
                android:padding="12dp"
                android:layout_marginBottom="12dp"/>

            <EditText
                android:id="@+id/et_vote_content"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:hint="请输入投票详细说明"
                android:gravity="top"
                android:background="@drawable/edittext_bg"
                android:padding="12dp"
                android:layout_marginBottom="12dp"/>

            <TextView
                android:text="投票类型:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"/>

            <RadioGroup
                android:id="@+id/rg_selection_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">
                <RadioButton
                    android:id="@+id/rb_single"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="单选"
                    android:checked="true"/>
                <RadioButton
                    android:id="@+id/rb_multi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="多选"
                    android:layout_marginLeft="20dp"/>
            </RadioGroup>

            <TextView
                android:text="投票选项:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"/>

            <LinearLayout
                android:id="@+id/layout_options_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"/>

            <Button
                android:id="@+id/btn_add_option"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="+ 添加选项"
                android:background="@drawable/button_border_gray"
                android:textColor="#666"
                android:layout_marginBottom="16dp"/>

            <LinearLayout
                android:id="@+id/layout_attachment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="12dp"
                android:background="@drawable/edittext_bg"
                android:layout_marginBottom="24dp">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_add_photo"/>
                <TextView
                    android:id="@+id/tv_attachment_name"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="添加附件/图片"
                    android:layout_marginLeft="10dp"
                    android:textColor="#666"/>
                <ImageView
                    android:id="@+id/iv_delete_attachment"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_delete"
                    android:visibility="gone"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btn_save_draft"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="存草稿"
                    android:background="@drawable/button_border_gray"
                    android:textColor="#333"
                    android:layout_marginRight="10dp"/>
                <Button
                    android:id="@+id/btn_publish_now"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="立即发布"
                    android:background="@drawable/blue_rounded_btn"
                    android:textColor="#FFF"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>