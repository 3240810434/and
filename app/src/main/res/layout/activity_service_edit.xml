<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp">
            <ImageView
                android:id="@+id/btn_back"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/fan_hui"
                android:layout_centerVertical="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发布服务"
                android:textSize="18sp"
                android:textColor="#333"
                android:layout_centerInParent="true"/>
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="服务名称"
            android:layout_marginBottom="5dp"/>
        <EditText
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_bg"
            android:padding="12dp"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="服务展示图 (最多9张)"
            android:layout_marginBottom="8dp"/>
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">
            <LinearLayout
                android:id="@+id/ll_image_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_add_image"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/photo_album"
                    android:scaleType="centerInside"
                    android:background="@drawable/box_bg"/>
            </LinearLayout>
        </HorizontalScrollView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="详细描述"
            android:layout_marginBottom="5dp"/>
        <EditText
            android:id="@+id/et_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minLines="3"
            android:gravity="top"
            android:background="@drawable/edittext_bg"
            android:padding="12dp"
            android:layout_marginBottom="16dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/box_bg"
            android:padding="12dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="价格设置"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="计价单位"/>
                <Spinner
                    android:id="@+id/spinner_unit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_bg"
                    android:minHeight="40dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="基础价格"/>
                <EditText
                    android:id="@+id/et_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:background="@drawable/edittext_bg"
                    android:padding="10dp"/>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="服务类型"
            android:layout_marginBottom="8dp"/>
        <RadioGroup
            android:id="@+id/rg_service_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">
            <RadioButton
                android:id="@+id/rb_type_door"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="上门服务"
                android:checked="true"
                android:layout_weight="1"/>
            <RadioButton
                android:id="@+id/rb_type_shop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="到店服务"
                android:layout_weight="1"/>
            <RadioButton
                android:id="@+id/rb_type_online"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="线上咨询"
                android:layout_weight="1"/>
        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="服务标签"
            android:layout_marginBottom="8dp"/>

        <RadioGroup
            android:id="@+id/rg_service_tag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/rb_tag_clean"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="保洁服务"
                android:checked="true"
                android:padding="8dp"/>

            <RadioButton
                android:id="@+id/rb_tag_repair"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="维修服务"
                android:padding="8dp"/>

            <RadioButton
                android:id="@+id/rb_tag_housework"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="家政帮手"
                android:padding="8dp"/>

            <RadioButton
                android:id="@+id/rb_tag_errand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="便民代办"
                android:padding="8dp"/>
        </RadioGroup>

        <Button
            android:id="@+id/btn_publish"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="发布服务"
            android:textColor="@color/white"
            android:background="@drawable/blue_rounded_btn"
            android:backgroundTint="#89CFF0"
            android:layout_marginTop="30dp"/>

    </LinearLayout>
</ScrollView>